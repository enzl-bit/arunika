{
  "info": {
    "name": "Arunika API",
    "_postman_id": "12345678-90ab-cdef-1234-567890abcdef",
    "description": "Postman collection for Arunika Framework demo (Auth, Todos, Swagger, WS).",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/status"
      }
    },
    {
      "name": "Login (JWT Auth)",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"username\": \"admin\",\n  \"password\": \"1234\"\n}"
        },
        "url": "{{baseUrl}}/login"
      }
    },
    {
      "name": "Get All Todos",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}", "type": "text" }
        ],
        "url": "{{baseUrl}}/api/v1/todos"
      }
    },
    {
      "name": "Create Todo",
      "request": {
        "method": "POST",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"title\": \"Belajar Arunika\"\n}"
        },
        "url": "{{baseUrl}}/api/v1/todos"
      }
    },
    {
      "name": "Get Todo by ID",
      "request": {
        "method": "GET",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/v1/todos/{{id}}"
      }
    },
    {
      "name": "Update Todo",
      "request": {
        "method": "PUT",
        "header": [
          { "key": "Content-Type", "value": "application/json" },
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"done\": true\n}"
        },
        "url": "{{baseUrl}}/api/v1/todos/{{id}}"
      }
    },
    {
      "name": "Delete Todo",
      "request": {
        "method": "DELETE",
        "header": [
          { "key": "Authorization", "value": "Bearer {{token}}" }
        ],
        "url": "{{baseUrl}}/api/v1/todos/{{id}}"
      }
    },
    {
      "name": "Swagger Docs",
      "request": {
        "method": "GET",
        "header": [],
        "url": "{{baseUrl}}/docs"
      }
    }
  ],
  "variable": [
    { "key": "token", "value": "" },
    { "key": "id", "value": "" }
  ]
}
